@model ProjectManagement.Models.Student

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2>Profile</h2>
        </div>
    </div>
    <hr />
    <p>
        <a class="btn btn-primary btn-lg" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Your Details  &dArr;
        </a>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.emailId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.emailId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phone)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.joinYear)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.joinYear)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.semester)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.semester)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.city)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.city)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Dept)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Dept)
                </dd>

            </dl>
        </div>
    </div>
    <div>
        <p>
            <a class="btn btn-primary btn-lg" data-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="false" aria-controls="collapseExample">
                Manage Projects  &dArr;
            </a>
        </p>
        <div class="collapse" id="collapseExample1">
            <div class="card card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <p class="alert alert-warning">Pending Projects</p>
                        <span class="text-right">
                            <a href="/Student/pending_projects" class="btn btn-info">See</a> 
                        </span>  
                    </li>
                    <li class="list-group-item">
                        <p class="alert alert-info">Active/Running Projects</p>
                        <span class="text-right">
                            <a href="/Student/selected_project" class="btn btn-info">See</a>
                        </span>
                    </li>
                    <li class="list-group-item">
                        <p class="alert alert-success">Submitted/Marks Projects</p>
                        <span class="text-right">
                            <a href="/Student/submitted_project" class="btn btn-info">See</a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <a href="/Student/analyze_performance" class="btn btn-primary btn-lg">Your Progress &raquo;</a>
    </div>
</div>
